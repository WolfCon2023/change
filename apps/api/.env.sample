# =============================================================================
# CHANGE Platform API Environment Configuration
# Copy this file to .env and fill in the values
# =============================================================================

# Server
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# MongoDB
MONGODB_URI=mongodb://localhost:27017/change_platform
# For Railway/production, use the connection string provided by your MongoDB service

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# Seed Data (development only)
SEED_ADMIN_EMAIL=admin@change-platform.com
SEED_ADMIN_PASSWORD=Admin123!

# Feature Flags (comma-separated)
ENABLED_FEATURES=onboarding,enrollment,formation,documents,tasks,advisor

# SMTP / Email
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# App URL (for email links)
APP_URL=http://localhost:5173

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_STARTER_MONTHLY_PRICE_ID=price_xxx
STRIPE_STARTER_ANNUAL_PRICE_ID=price_xxx
STRIPE_PROFESSIONAL_MONTHLY_PRICE_ID=price_xxx
STRIPE_PROFESSIONAL_ANNUAL_PRICE_ID=price_xxx
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_xxx
STRIPE_ENTERPRISE_ANNUAL_PRICE_ID=price_xxx
STRIPE_TRIAL_DAYS=7
